<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd" >

	<context:component-scan base-package="org.dsa" /> 
 	<context:annotation-config ></context:annotation-config>

	<bean id="graphDbFactory" class="org.neo4j.graphdb.factory.GraphDatabaseFactory">
	</bean>

	<bean id="dbPath" class="java.lang.String">
		<constructor-arg>/home/danny/Neo4J/PcapDb</constructor-arg>
	</bean>

	<bean id="dbPropertiesFile" class="java.lang.String">
		<constructor-arg>pcapdb.properties</constructor-arg>
	</bean>
	
</beans>